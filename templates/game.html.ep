% title 'Guess Whom';
% layout 'default';

<h3><%= $gamename %></h3>

<div class="top-part">
    <div class="face">
    <%= $facename %><br><img src="/face/<%= $facetype %>/<%= $faceid %>.jpg">
    </div>

    <div id="history"></div>
</div>

<div class="input">
    <p><b>State: </b><span id="state">Loading...</span></p>

    <div id="question-input">
        <form id="question-form">
            <input id="input" type="text">
            <button id="submitter" type="submit">Send</button>
        </form>
    </div>
    <div style="display:none" id="victory-input">
        <button id="victory">It's facename!</button> (or re-enable some more faces to ask more questions)
    </div>
    <div style="display:none" id="answer-input">
        <button id="yes-button">Yes</button>
        <button id="no-button">No</button>
    </div>
    </form>
</div>

<div class="faces" id="faces"></div>

<script type="text/javascript">
    var gameid = '<%= $gameid %>';
    var gameurl = '<%= $gameurl %>';
    var faceid = '<%= $faceid %>';
    var facetype = '<%= $facetype %>';
    var nfaces = <%= $nfaces %>;
    var facenames = <%== $facenames %>;
    var singular = '<%= $singular %>';
    var plural = '<%= $plural %>';
</script>
<script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js"></script>
<script src="/game.js" type="text/javascript"></script>
